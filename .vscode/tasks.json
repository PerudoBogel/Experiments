{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++ build",
			"command": "g++.exe",
			"args": [
				"-g3",
				"*.cpp",
				"World/*.cpp",
				"World/Map/*.cpp",
				"World/Map/Sector/*.cpp",
				"UI/DisplayDriver/*.cpp",
				"UI/ControllerDriver/*.cpp",
				"utils/*.cpp",
				"lib/lodepng/lodepng.cpp",
				"lib/lodepng/lodepng_util.cpp",
				"Control/Controllers/*.cpp",
				"-I",
                "lib/SFML/include",
				"-I",
                "lib/lodepng",
				"-I",
                "lib/SDL-1.2.15/include",
				"-I",
				"World",
				"-I",
				"World/Map",
				"-I",
				"World/Map/Sector",
				"-I",
				"Entities",
				"-I",
				"Entities/Interfaces",
				"-I",
				"Entities/Models",
				"-I",
				"Entities/Projectiles",
				"-I",
				"Control",
				"-I",
				"Control/Controllers",
				"-I",
				"Control/Actions",
				"-I",
				"Control/AI",
				"-I",
				"Control/Player",
				"-I",
				"Control/Projectile",
				"-I",
				"UI",
				"-I",
				"UI/DisplayDriver",
				"-I",
				"UI/ControllerDriver",
				"-I",
				"Menu",
				"-I",
                "utils",
				"-L",
				"lib/bin",
				"-lsfml-main",
				"-lsfml-graphics",
				"-lsfml-system",
				"-lsfml-window",
				"-pipe",
				"-std=c++2a",
				"-o",
				"main.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}